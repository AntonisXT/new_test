###############################################
# üåç Environment Configuration for Backend API
# Copy this file to `.env` and fill in your values
###############################################

# ------------------------------------------------
# üîó MongoDB Connection
# Example: mongodb+srv://username:password@cluster0.mongodb.net/elgreco?retryWrites=true&w=majority
# ------------------------------------------------
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority


# ------------------------------------------------
# üîê JWT Secret Key
# Use a long, random 32+ character string (e.g., from https://generate-secret.vercel.app/)
# ------------------------------------------------
JWT_SECRET=please_change_me_to_a_random_32b_string


# ------------------------------------------------
# üåê Frontend Origin
# Used for CORS configuration ‚Äî must match your deployed frontend domain
# ------------------------------------------------
FRONTEND_ORIGIN=https://<your-vercel-app>.vercel.app


# ------------------------------------------------
# ‚öôÔ∏è Server Configuration
# Render sets PORT automatically in production, but this helps local development
# ------------------------------------------------
PORT=10000


# ------------------------------------------------
# üç™ Cookies
# SameSite for cookies; use 'None' when frontend and backend are on different domains (requires HTTPS)
# Options: Lax | Strict | None
# ------------------------------------------------
COOKIE_SAMESITE=None


# ------------------------------------------------
# üè∑Ô∏è Cookie Domain (optional but recommended in production)
# Set this to your frontend hostname (e.g., new-test-swart-ten.vercel.app)
# If unset, cookie will be host-only (the response host). With Vercel rewrites this is usually fine.
# ------------------------------------------------
COOKIE_DOMAIN=
